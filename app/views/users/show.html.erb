<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <% if session[:github] == nil %>
      <%= button_to "Log in to GitHub", github_name_login_path, class: "btn bg-teal btn-outline " %>
    <% else %>
    <section class="github">
    <h3>Github Repositories</h3>
      <% user.repos.each do |repo| %>
      <ul class="github-repos">
        <li><%= link_to "#{repo.name}", "#{repo.url}" %> </li>
      </ul>
    <% end %>

    <h3>Github Followers</h3>
      <% user.followers.each do |follower| %>
        <ul class="followers">
          <li><%= link_to "#{follower.name}", "#{follower.url_link}" %></li>
          <%= button_to "Friend", "/follows/#{current_user.id}/#{follower.id}", method: :post %>
        </ul>
      <% end %>

    <h3>Who You are Following on Github</h3>
    <% user.followings.each do |user| %>
      <ul class ="following">
        <li><%= link_to "#{user.name}", "#{user.url_link}" %></li>
      </ul>
    <% end %>
  </section>

  <% end %>
    <h1>Bookmarked Segments</h1>
  </section>
</section>
